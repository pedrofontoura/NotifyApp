<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.notifyapp.MainActivity">


    <LinearLayout
        android:background="@color/colorTopLoginView"
        android:backgroundTint="@color/colorTopLoginView"
        android:layout_height="200dp"
        android:gravity="center"
        android:layout_width="match_parent">

        <ImageView
            android:layout_gravity="center"
            android:background="@mipmap/ico_home"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/login_view_usuario"
            android:layout_marginTop="30dp"
            android:hint="UsuÃ¡rio"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_width="146dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/login_view_senha"
            android:layout_marginTop="10dp"
            android:hint="Senha"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_width="146dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/login_view_button_logar"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/background_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>
